<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <% unless current_user.token %>
  <%= button_to "Connnect to Github",
  "https://github.com/login/oauth/authorize?client_id=#{ENV['GITHUB_CLIENT_ID']}" %>
  <% end %>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <% if current_user.token %>
    <section>
        <h1>Github</h1>
        <ul>
          <% @user.repos.each do |repo| %>
            <li><%= link_to repo.name, repo.url %></li>
          <% end %>
        </ul>
    </section>
    <section>
        <h1>Followers</h1>
        <ul>
          <% @user.followers.each do |follower| %>
            <li><%= link_to follower.name, follower.url %></li>
          <% end %>
        </ul>
    </section>
    <section>
        <h1>Following</h1>
        <ul>
          <% @user.following.each do |following| %>
            <li><%= link_to following.name, following.url %></li>
          <% end %>
        </ul>
    </section>
  <% end %>
</section>
